<% layout("/layouts/boilerplate") %>

<body >

  <!-- Event Card Container -->
  <div style="
    max-width: 1100px;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
    background: rgba(255, 255, 255, 0.85);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05);
    border-radius: 16px;
    overflow: hidden;
    backdrop-filter: blur(10px);
  ">

    <!-- Left: Banner -->
    <% if (event.banner) { %>
    <div style="flex: 1 1 400px; min-height: 300px;">
      <img src="<%= event.banner %>" alt="Event Banner" style="width: 100%; height: 100%; object-fit: cover;">
    </div>
    <% } %>

    <!-- Right: Event Details -->
    <div style="flex: 2 1 500px; padding: 40px; display: flex; flex-direction: column; justify-content: center;">

      <!-- Event Title -->
      <h2 style="font-size: 2.2rem; font-weight: bold; color: #122a45; margin-bottom: 10px;">
        <b><%= event.name %></b> 
      </h2>

      <!-- Host Info -->
      <p style="font-size: 1rem; color: #6c757d; margin-bottom: 20px;">
        Hosted by: <strong><%= event.addedBy %></strong>
      </p>

      <!-- Description -->
      <p style="font-size: 1.1rem; color: #333; line-height: 1.6; margin-bottom: 30px;">
        <%= event.description %>
      </p>

      <!-- Date and Location Row -->
      <div style="display: flex; gap: 30px; flex-wrap: wrap; font-size: 1rem; color: #444;">
        <!-- Date -->
        <div style="display: flex; align-items: center;">
          <i class="fa-solid fa-calendar-days" style="color: #FFC107; margin-right: 10px;"></i>
          <span>
            <strong>Date:</strong> <%= new Date(event.date).toLocaleDateString('en-IN', {
              weekday: 'short', year: 'numeric', month: 'short', day: 'numeric'
            }) %>
          </span>
        </div>

        <!-- Location -->
        <div style="display: flex; align-items: center;">
          <i class="fa-solid fa-location-dot" style="color: #FFC107; margin-right: 10px;"></i>
          <span><strong>Venue:</strong> <%= event.location %></span>
        </div>
      </div>

    </div>
  </div>
</body>
